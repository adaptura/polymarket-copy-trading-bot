# ============================================================
# TimescaleDB Analytics Configuration
# ============================================================
# Add these variables to your .env file

# TimescaleDB Connection URL
# Format: postgresql://user:password@host:port/database
# Default local Docker: postgresql://postgres:postgres@localhost:5432/polymarket_analytics
TIMESCALE_URL=postgresql://postgres:postgres@localhost:5432/polymarket_analytics

# Analysis Mode
# When true, the bot monitors and records trades but does NOT execute any orders
# Use this to collect data before going live with copy trading
ANALYSIS_MODE=true

# ============================================================
# Docker Environment Variables (optional)
# ============================================================
# These are used by docker-compose.yml

# TimescaleDB password (used in docker-compose.yml)
TIMESCALE_PASSWORD=postgres

# TimescaleDB user (used in docker-compose.yml)
TIMESCALE_USER=postgres

# ============================================================
# Quick Start
# ============================================================
# 1. Start TimescaleDB:
#    docker-compose up -d
#
# 2. Run migrations:
#    docker exec -i polymarket_timescaledb psql -U postgres -d polymarket_analytics < src/db/migrations/001_create_trades.sql
#
# 3. Start bot in analysis mode:
#    ANALYSIS_MODE=true npm run dev
#
# 4. View analytics:
#    npm run analytics:performance -- --all
#
# 5. Run backtest:
#    npm run analytics:backtest -- --trader 0x... --days 30
